{{!-- views/services.hbs – wersja z płynnym przejściem (CSS transition + JS klasy) --}}
{{#section 'styles'}}
<link rel="stylesheet" href="/css/services.css">
{{/section}}

{{#section 'scripts'}}
<script src="/js/services-animations.js" defer></script>
{{/section}}

<!-- Hero (gradient + SVG dekoracja) -->
<section class="services-hero">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <h1 class="display-3 fw-bold mb-4">Nasze Usługi Medyczne</h1>
                <p class="lead mb-0">Kompleksowa opieka specjalistyczna w nowoczesnej klinice. Szybkie terminy,
                    doświadczony zespół i najnowsze technologie diagnostyczne.</p>
            </div>
        </div>
    </div>
</section>

<!-- Sekcja specjalizacji – karty z klasą .spec-card (płynne animacje) -->
<section class="py-5 bg-white">
    <div class="container">
        <div class="row g-5">
            {{#each specializations}}
            <div class="col-md-6 col-lg-4">
                <div class="card spec-card h-100 border-0 shadow-lg rounded-3 overflow-hidden position-relative"
                    data-spec="{{this.title}}">
                    <div class="img-wrapper">
                        <img src="{{this.img}}" class="card-img-top" alt="{{this.title}}" loading="lazy">
                    </div>
                    <div class="card-body d-flex flex-column p-4">
                        <h3 class="card-title h5 fw-bold text-primary mb-2">{{this.title}}</h3>
                        <p class="text-muted small mb-3">{{this.short}}</p>
                        <p class="text-secondary flex-grow-1 small lh-lg">{{this.long}}</p>
                        <a href="/rezerwacja?spec={{this.title}}"
                            class="btn btn-primary mt-4 stretched-link d-flex align-items-center justify-content-center gap-2">
                            <i class="bi bi-calendar-check"></i> Umów wizytę
                        </a>
                    </div>
                    <div class="card-overlay"></div>
                </div>
            </div>
            {{/each}}
        </div>

        <!-- CTA na dole -->
        <div class="row mt-5">
            <div class="col text-center">
                <p class="text-muted mb-3">Nie znalazłeś swojej specjalizacji? Skontaktuj się z nami!</p>
                <a href="/kontakt" class="btn btn-outline-secondary btn-lg">Kontakt z recepcją</a>
            </div>
        </div>
    </div>
</section>