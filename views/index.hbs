<!-- views/index.hbs -->
{{#section 'styles'}}
<link rel="stylesheet" href="/css/carousel.css">
<link rel="stylesheet" href="/css/specializations.css">
{{/section}}

{{#section 'scripts'}}
<script src="/js/carousel-smooth.js"></script>
{{/section}}

<!-- LEKKA KARUZELA – ZERO LAGÓW -->
<div id="customCarousel" class="custom-carousel" tabindex="0">
  <div class="carousel-slides">
    {{#each slides}}
    <div class="carousel-slide{{#if @first}} active{{/if}}">
      <img src="{{src}}" data-src="{{src}}" alt="{{title}}" class="carousel-img"
        loading="{{#if @first}}eager{{else}}lazy{{/if}}">

      <div class="carousel-caption">
        <div class="text-box">
          <h3>{{title}}</h3>
          <p>{{description}}</p>
        </div>
      </div>
    </div>
    {{/each}}
  </div>

  <button class="carousel-control prev" id="prevBtn">❮</button>
  <button class="carousel-control next" id="nextBtn">❯</button>
</div>

<!-- SEKCJA SPECJALIZACJI -->
<section class="py-5 bg-light" id="specializations">
  <div class="container">
    <h2 class="text-center mb-5 fw-bold text-primary">
      Nasze Specjalizacje
    </h2>

    <div class="row g-4">
      {{#each specializations}}
      <div class="col-md-6 col-lg-4">
        <div class="card h-100 border-0 shadow-sm hover-shadow">
          <div class="card-body text-center p-5">
            <div class="specialization-img mb-4">
              <img src="{{image}}" alt="{{title}}" class="img-fluid rounded-circle" loading="lazy">
            </div>
            <h5 class="card-title fw-bold">{{title}}</h5>
            <p class="card-text text-muted small">{{description}}</p>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>

